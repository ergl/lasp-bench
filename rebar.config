{plugins, [rebar3_run]}.

{deps,
 [
  {getopt, "0.8.2"},
  {lager, "3.5.1"},
  {folsom, "0.8.5"},
  {hackney, "1.9.0", {git, "git://github.com/benoitc/hackney.git", {tag, "1.9.0"}}},
  {jsx, "2.8.2", {git, "git://github.com/talentdeficit/jsx.git", {tag, "2.8.2"}}},
  {riak_pb, {git, "git://github.com/syncfree/riak_pb", {tag, "v0.2.0"}}},
  {antidote_pb, {git, "git://github.com/syncfree/antidote_pb", {tag, "v0.1.0"}}},
  {protobuffs, {git, "git://github.com/basho/erlang_protobuffs.git", {tag, "0.9.0"}}}
 ]}.

{erl_opts, [{src_dirs, [src]},
           {parse_transform, lager_transform}]}.

{escript_incl_apps, [lager,getopt,folsom,hackney,jsx,antidote_pb,riak_pb,protobuffs]}.

{escript_emu_args, "%%! -name bench@127.0.0.1 +K true -rsh ssh -noshell -noinput +P 1222333 +Q 1222333 +zdbbl 32768 -setcookie antidote\n"}.
